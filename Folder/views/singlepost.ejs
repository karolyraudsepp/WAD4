<html lang="en">
<head>
 <meta charset="UTF-8">
 <meta http-equiv="X-UA-Compatible" content="IE=edge">
 <meta name="viewport" content="width=device-width, initial-scale=1.0">
 <link rel="stylesheet" href="/public/assets/css/style.css">
 <title>Single Post</title>

</head>
<body>
   <div class= "header">
      <h1>Single post page</h1>
      <%- include('./partials/header.ejs') %>
</div>
   <div class="for_background">
      <div class="profile">
          <div class="container2"> 
            <div class="singlepost">
            <h2>
            <%= posts.title %>
            </h2>
            <div class="content">
               <img src="<%= posts.image %>"" alt="Girl in a jacket" style="width: 100%">
            <p>
            <%= posts.body %>
            </p>
            </div>
            <div>
               <%= posts.likes %>
            </div>
            <a href="/posts" class="delete" data-del="<%= posts.id %>">Delete</a>
            </div>
         </div>
      </div>
</div>
 <script>
 const delreq = document.querySelector('a.delete');
 delreq.addEventListener('click', (e) => {
 const endpoint = `/posts/${delreq.dataset.del}`;
 fetch(endpoint, {
 method: 'DELETE',
 }).then(window.location.href = '/posts')
 });
 </script>
<div>
   <%- include('./partials/footer.ejs') %>
</div>
</body>
</html>